{
  "compilerOptions": {
    "alwaysStrict": true,
    "jsx": "react",
    "lib": ["es6", "dom", "es2016.array.include"],
    "target": "ES5",
    "module": "ESNext",
    "jsxFactory": "h",
    "noEmitHelpers": true,
    "importHelpers": true,
    "allowJs": true,
    "moduleResolution": "node",
    "esModuleInterop": true
  },
  "include": ["src/**/*.tsx", "src/**/*.ts"],
  "exclude": ["node_modules"]

}
